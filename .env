# Host ports (what you use to access the services on your machine)
ENVOY_PORT=3000
ENVOY_ADMIN_PORT=9901

# Container ports (what Envoy listens on inside the container)
ENVOY_LISTENER_PORT=10000
ENVOY_ADMIN_LISTENER_PORT=9901

# ---- Upstream (the service Envoy forwards to) ----
# IMPORTANT: this must match the docker-compose service name
MESSAGING_APP_HOST=messaging_app
MESSAGING_APP_PORT=8080
